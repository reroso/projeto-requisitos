<!DOCTYPE html>
<html>
<head>
<style>
html, body {
  height: 100%;
  width: 100%;
  background: #F5F5F5;
}
.tela{
    height: 100%;
    width: 100%;
    display: flex;
    flex-direction: column;
}
.cabecalho{
    background: #7749F8;
    border-radius: 4px;
    height: 5%;
    width: 100%;
    display: flex;
    flex-direction: row;
}
.cabecalho_1{
    display: flex;
    height: 100%;
    width: 20%;
    align-items: center;
    justify-content: center;   
}
.cabecalho_2{
    display: flex;
    height: 100%;
    width: 20%;
    align-items: center;
    justify-content: center;  
}
.cabecalho_3{
    display: flex;
    height: 100%;
    width: 20%;
    align-items: center;
    justify-content: center;  
}
.cabecalho_4{
    display: flex;
    height: 100%;
    width: 20%;
    align-items: center;
    justify-content: center;  
}
.cabecalho_5{
    display: flex;
    height: 100%;
    width: 20%;
    align-items: center;
    justify-content: center;  
}
.titulos{
    display: flex;
    height: 14%;
    width: 100%;
    align-items: center;
    justify-content: center; 
}
.corpo{
    height: 81%;
    width: 100%;
    display: flex;
    flex-direction: row;
} 
.corpo_1{
    display: flex;
    flex-direction: column;
    height: 10%;
    width: 30%;
    justify-content: space-around;
}
.corpo_2{
    display: flex;
    height: 100%;
    width: 70%;
    align-items: center;
    justify-content: center; 
    flex-direction: row;
}
.corpo_2_1{
    display: flex;
    height: 100%;
    width: 33.3%;
    flex-direction: column;
    text-align: center;
}
.corpo_2_1_1{
    display: flex;
    height: 5%;
    width: 100%;
    flex-direction: row;
    text-align: center;
    justify-content: space-evenly;
}
.corpo_2_1_2{
    display: flex;
    height: 100%;
    width: 100%;
    flex-direction: column;
    text-align: center;
}
.corpo_2_2{
    display: flex;
    height: 100%;
    width: 33.4%;
}
.corpo_2_3{
    display: flex;
    height: 100%;
    width: 33.3%;
}
A{
    text-decoration: none;
    color: white;
    font-family: 'Inter';
    font-style: normal;
    font-weight: 900;
    font-size: 18px;
    line-height: 16px;
}
.corpo_label
{
    font-family: 'Inter';
    font-style: normal;
    font-weight: 600;
    font-size: 24px;
    line-height: 29px;
    color: #152536;
}
.corpo_textos{
    font-family: 'Inter';
    font-style: normal;
    font-weight: 400;
    font-size: 20px;
    line-height: 21px;
    color: #6C757D;
}
th, td{
    padding: 10px 20px;
    border: 1px solid #000;
    font-family: 'Inter';
    font-style: normal;
    font-weight: 400;
    font-size: 16px;
    line-height: 28px;
    text-align: left;
    color: #152536;
}
.hidden{
    display: none;
}
.botao_adicionar{
    background-color: #7749F8;
    color: white;
    display: inline-block;
    font-size: 20px;
    border: 1px;
    height: fit-content;
}
.corpo_edita_input{
    font-family: 'Inter';
    font-style: normal;
    font-weight: 400;
    font-size: 16px;
    line-height: 21px;
    color: #152536;
    width: 100%;
}
.celula_editar{
    border-width: 1px 0 1px 1px;
    position: relative;
}
.celula_excluir{
    border-width: 1px 1px 1px 0;
    text-align: right;
    position: relative;
    left: -2px;
}
th a{
    text-decoration: none;
    color: black;
    font-family: 'Inter';
    font-style: normal;
    font-weight: 900;
    font-size: 18px;
    line-height: 16px;
}
</style>
</head>
<body>
    
<div class="tela">
    <div class="cabecalho">
        <div class="cabecalho_1">
            <a href="/cadastro">Dimensão</a>
        </div>
        <div class="cabecalho_2">
            <a href="/cadastroProcesso">Processo</a>
        </div>
        <div class="cabecalho_3">
            <a href="/cadastroResultado">Resultado Esperado</a>
        </div>
        <div class="cabecalho_4">
            <a href="/cadastroMaturidade">Nivel de Maturidade</a>
        </div>
        <div class="cabecalho_5">
            <a href="/cadastroProcessoMaturidade">Processo por Maturidade</a>
        </div>
    </div>
    <div class="titulos">
        <h1>Gerencia de Requisitos - PRMC</h1>
    </div>
    <div class="corpo">
        <div class="corpo_1">
            <label class="corpo_label hidden" id="label_invisivel">Cadastre a Dimensão</label>
            <form action="/cadastro/incluir_dimensao" method="post" class="formulario">
                <input class="corpo_textos hidden" placeholder="Digite aqui" id ="input_invisivel" type="text" name="descricao">
            </form>
            
        </div>
        <div class="corpo_2">
                
            <div class="corpo_2_1">
                <div class="corpo_2_1_1">
                    <label class="corpo_label">Dimensões</label>
                    <input type="button" value="+" onclick="funcao()" class="botao_adicionar">
                </div>
                <div class="corpo_2_1_2">
                    <table>
            
                    <% @dimensaos.each do |dimensao| %>
                        <tr>
                            <th class="celula_editar"><form action="/cadastro/<%= dimensao.id %>/salvar_dimensao" method="post" class="formulario"><input class="corpo_edita_input" name ="descricao" type="text" name="descricao" value="<%= dimensao.descricao %>" style="background-color:transparent; border: none;"></form></th>
                            <th class="celula_excluir"><a href="/cadastro/<%= dimensao.id %>/excluir_dimensao">X</a></th>
                            
                        </tr>
                    <%end%>
                    
                    </table>
                </div>
            </div>
            <div class="corpo_2_2">
            
            </div>

            <div class="corpo_2_3">
            
            </div>
          
        </div>
    </div>

</div>

<script>
    var formulario = document.getElementsByClassName('formulario');
        for (var i = 0; i< formulario.length; i++){
          formulario[i].addEventListener('keydown', e => {
                if(e.key == "Enter") {
                    e.target.parentElement.parentElement.submit();
                }
            })
        }
      
    function addEventListenerToForm() {
    
    var formulario = document.getElementsByClassName('formulario');
    for (var i = 0; i< formulario.length; i++){
        formulario[i].addEventListener('keydown', e => {
            if(e.key == "Enter") {
                console.log(e.target.parentElement);
                e.target.parentElement.parentElement.submit();
            }
        })
    }
    }

    var inputInvisivel = document.getElementById("input_invisivel");
    var labelInvisivel = document.getElementById("label_invisivel");

    function funcao(){
        inputInvisivel.classList.remove('hidden');
        labelInvisivel.classList.remove('hidden');
    }
</script>

</body>
</html>
