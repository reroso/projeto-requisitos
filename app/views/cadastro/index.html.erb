    width: 100%;
}
.celula_editar{
    border-width: 1px 0 1px 1px;
    position: relative;
}
.celula_excluir{
    border-width: 1px 1px 1px 0;
    text-align: right;
    position: relative;
    left: -2px;
}
th a{
    text-decoration: none;
    color: black;
    font-family: 'Inter';
    font-style: normal;
    font-weight: 900;
    font-size: 18px;
    line-height: 16px;
}
.corpo_texto_input{
    font-family: 'Inter';
    font-style: normal;
    font-weight: 400;
    font-size: 20px;
    line-height: 21px;
    color: #6C757D;
}
.formulario{
    display: flex;
    flex-direction: row;
    justify-content: space-evenly; 
    width: 100%;
    align-items: center;
}
</style>
</head>
<body>
    
<div class="tela">
    <div class=tela_1>
        <div class="cabecalho">
            <div class="cabecalho_1">
                <a href="/cadastro">Dimensão</a>
            </div>
            <div class="cabecalho_2">
                <a href="/cadastroProcesso">Processo</a>
            </div>
             <div class="cabecalho_3">
                <a href="/cadastroResultado">Resultado<br> Esperado</a>
            </div>
            <div class="cabecalho_4">
                <a href="/cadastroMaturidade">Nivel<br> Maturidade</a>
            </div>
        </div>
    </div>
    <div class="tela_2">
        <div class="titulos">
            <h1>Gerencia de Requisitos - PRMC</h1>
        </div>
        <div class="corpo">
            <div class="corpo_2">
                    
                <div class="corpo_2_1">
                    <div class="corpo_2_1_1">
                        
                        <form action="/cadastro/incluir_dimensao" method="post" class="formulario">
                            <label class="corpo_label">Dimensões</label>
                            <input class="corpo_texto_input" placeholder="Digite aqui" name ="descricao" type="text" name="descricao" id="input_dimensao_hidden">
                            <input type="submit" value="+" class="botao_adicionar" id="click_button">
                        </form>
                        
                    </div>
                    <div class="corpo_2_1_2">
                        <table id="tabela_dimensao">
                
                        <% @dimensaos.each do |dimensao| %>
                            <tr>
                                <th class="celula_editar"><form action="/cadastro/<%= dimensao.id %>/salvar_dimensao" method="post" class="formulario"><input class="corpo_edita_input" name ="descricao" type="text" name="descricao" value="<%= dimensao.descricao %>" style="background-color:transparent; border: none;"></form></th>
                                <th class="celula_excluir"><a href="/cadastro/<%= dimensao.id %>/excluir_dimensao">X</a></th>   
                            </tr>
                        <%end%>
                        
                        </table>
                    </div>
                </div>
                <div class="corpo_2_2">
                
                </div>

                <div class="corpo_2_3">
                
                </div>
            
            </div>
        </div>
        
    </div>
</div>

<script>
    var formulario = document.getElementsByClassName('formulario');
        for (var i = 0; i< formulario.length; i++){
          formulario[i].addEventListener('keydown', e => {
                if(e.key == "Enter") {
                    e.target.parentElement.parentElement.submit();
                }
            })
        }
      
    function addEventListenerToForm() {
    
    var formulario = document.getElementsByClassName('formulario');
    for (var i = 0; i< formulario.length; i++){
        formulario[i].addEventListener('keydown', e => {
            if(e.key == "Enter") {
                console.log(e.target.parentElement);
                e.target.parentElement.parentElement.submit();
            }
        })
    }
    }

</script>

</body>
</html>
