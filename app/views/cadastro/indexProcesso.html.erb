<body>
    
<div class="tela">
    <div class="cabecalho">
        <div class="cabecalho_1">
            <a href="/cadastro">Dimens찾o</a>
        </div>
        <div class="cabecalho_2">
            <a href="/cadastroProcesso">Processo</a>
        </div>
        <div class="cabecalho_3">
            <a href="/cadastroResultado">Resultado Esperado</a>
        </div>
        <div class="cabecalho_4">
            <a href="/cadastroMaturidade">Nivel de Maturidade</a>
        </div>
    </div>
    <div class="titulos">
        <h1>Gerencia de Requisitos - PRMC</h1>
    </div>
    <div class="corpo">
        <div class="corpo_1">
            <form action="/cadastroProcesso/incluir_processo" method="post" class="formulario form_flex">

                <label class="corpo_label">Selecione a Dimens찾o</label>
                <%= select_tag "dimensao_id", options_from_collection_for_select(@dimensaos, "id", "descricao"), prompt: "Escolha uma dimens찾o", class: "dimensao corpo_texto_select" %>
                <label class="corpo_label">Cadastre o Processo</label>
                <input class="corpo_texto_input" placeholder="Digite aqui" type="text" name="descricao">
            
            </form>
            
        </div>
        <div class="corpo_2">
            <div class="corpo_2_1">
                <label class="corpo_label">Dimens천es</label>
                <table id="body">
                
                </table>
               
            </div>
            <div class="corpo_2_2">
                <label class="corpo_label">Processos</label>
                <table id="body2">
        
                    <% @processos.each do |processo| %>                
                        <input type="hidden" readonly="readonly" class="resultProcesso" value="<%=processo.dimensao.id%>">
                        <input type="hidden" readonly="readonly" class="descricaoProcesso" value="<%=processo.descricao%>">
                        <input type="hidden" readonly="readonly" class="descricaoDimensao" value="<%=processo.dimensao.descricao%>">
                        <input type="hidden" readonly="readonly" class="idProcesso" value="<%=processo.id%>">
   
        
                    <%end%>
                
                </table>
            </div>

            <div class="corpo_2_3">
            
            </div>
          
        </div>
    </div>

</div>

<script>
    var formulario = document.getElementsByClassName('formulario');
        for (var i = 0; i< formulario.length; i++){
          formulario[i].addEventListener('keydown', e => {
                if(e.key == "Enter") {
                    e.target.parentElement.parentElement.submit();
                }
            })
        }
      
    function addEventListenerToForm() {
    
    var formulario = document.getElementsByClassName('formulario');
    for (var i = 0; i< formulario.length; i++){
        formulario[i].addEventListener('keydown', e => {
            if(e.key == "Enter") {
                console.log(e.target.parentElement);
                e.target.parentElement.parentElement.submit();
            }
        })
    }
    }

    var selectDimensao = document.getElementsByClassName("dimensao");
    var inputDimensao = document.getElementsByClassName('inputElDimensao');
    var comparaProcesso = document.getElementsByClassName('resultProcesso');
    var descricaoProcesso = document.getElementsByClassName('descricaoProcesso');
    var descricaoDimensao = document.getElementsByClassName('descricaoDimensao');
    var idProcesso = document.getElementsByClassName('idProcesso')
    var formProcesso = document.getElementById('formProcesso');
    
    var table = document.createElement('table');
    var thead = document.createElement('thead');
    var tbody = document.createElement('tbody');
    
    var table2 = document.createElement('table');
    var thead2 = document.createElement('thead');
    var tbody2 = document.createElement('tbody');
    

    table.appendChild(thead);
    table.appendChild(tbody);

    table2.appendChild(thead2);
    table2.appendChild(tbody2);

    document.getElementById('body').appendChild(table);
    document.getElementById('body2').appendChild(table2);
    i = 0;
    while( i < selectDimensao.length) {
        
        selectDimensao[i].addEventListener('change', e => {
            e.target.nextElementSibling.value = e.target.value;
            tbody.innerText = "";
            tbody2.innerText = "";
            
            for(var j = 0 ; j < comparaProcesso.length; j++)
            {
                if(comparaProcesso[j].attributes[3].nodeValue == e.target.value)
                {
                    
                    var k = idProcesso[j].attributes[3].nodeValue
                    var row = document.createElement('tr');
                    var heading = document.createElement('td');
                    heading.innerHTML = descricaoDimensao[j].attributes[3].nodeValue;
                    row.appendChild(heading);
                    tbody.appendChild(row);

                    row = document.createElement('tr');
                    heading = document.createElement('td');
                    heading2 = document.createElement('td'); 
                    //formProcesso[0].defaultValue = descricaoProcesso[j].attributes[3].nodeValue;                        
                    heading.innerHTML = `<fieldset><form action="/cadastroProcesso/${k}/salvar_processo" method="post" class="formulario"><textarea type="text" name="descricao" style="background-color:transparent; border: none;">${descricaoProcesso[j].attributes[3].nodeValue}</textarea></form></fieldset>`;
                    heading2.innerHTML = `<a href=/cadastroProcesso/${k}/excluir_processo>X<a>`;
                    row.appendChild(heading);
                    row.appendChild(heading2);
                    tbody2.appendChild(row);

                }

            }
        })         
        i++;
    }
</script>

</body>
</html>