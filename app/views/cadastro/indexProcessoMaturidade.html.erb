<body>
    
<div class="tela">
    <div class="cabecalho">
        <div class="cabecalho_1">
            <a href="/cadastro">Dimens√£o</a>
        </div>
        <div class="cabecalho_2">
            <a href="/cadastroProcesso">Processo</a>
        </div>
        <div class="cabecalho_3">
            <a href="/cadastroResultado">Resultado Esperado</a>
        </div>
        <div class="cabecalho_4">
            <a href="/cadastroMaturidade">Nivel de Maturidade</a>
        </div>
        <div class="cabecalho_5">
            <a href="/cadastroProcessoMaturidade">Processo por Maturidade</a>
        </div>
    </div>
    <div class="titulos">
        <h1>Gerencia de Requisitos - PRMC</h1>
    </div>
    <div class="corpo">
        <div class="corpo_1">
            <form action="/cadastroProcessoMaturidade/incluir_processoMaturidade" method="post" class="formulario form_flex">
                <label class="corpo_label hidden" id="label_processo_hidden">Selecione o Processo</label>
                <%= select_tag "processo_id", options_from_collection_for_select(@processos, "id", "descricao"), prompt: "Escolha um processo", class: "processo corpo_texto_select hidden" %>
                <label class="corpo_label hidden" id="label_maturidade_hidden">Selecione o nivel de Maturidade</label>
                <%= select_tag "maturidade_id", options_from_collection_for_select(@maturidades, "id", "descricao"), prompt: "Escolha um nivel de maturidade", class: "maturidade corpo_texto_select hidden" %>
            
            </form>
            
        </div>
        <div class="corpo_2">
            <div class="corpo_2_1">
                <label class="corpo_label">Maturidade</label>
                <table id="body">
                
                </table>
               
            </div>
            <div class="corpo_2_2">
                <div class="corpo_2_2_1">
                    <label class="corpo_label">Processos</label>
                    <input type="button" value="+" onclick="funcao()" class="botao_adicionar">
                </div>
                <div class="corpo_2_2_2">
                    <table id="body2">
        
                    <% @processoMaturidades.each do |processoMaturidade| %>                
                        <input type="hidden" readonly="readonly" class="resultProcesso" value="<%=processoMaturidade.processo.id%>">
                        <input type="hidden" readonly="readonly" class="descricaoProcesso" value="<%=processoMaturidade.processo.descricao%>">
                        <input type="hidden" readonly="readonly" class="descricaoMaturidade" value="<%=processoMaturidade.maturidade.descricao%>">
                        <input type="hidden" readonly="readonly" class="idProcesso" value="<%=processoMaturidade.id%>">
   
                        
                    <%end%>
                
                </table>
                </div>
                
                
            </div>

            <div class="corpo_2_3">
            
            </div>
          
        </div>
    </div>

</div>

<script>
    var formulario = document.getElementsByClassName('formulario');
        for (var i = 0; i< formulario.length; i++){
          formulario[i].addEventListener('keydown', e => {
                if(e.key == "Enter") {
                    e.target.parentElement.submit();
                }
            })
        }
      
    function addEventListenerToForm() {
    
    var formulario = document.getElementsByClassName('formulario');
    for (var i = 0; i< formulario.length; i++){
        formulario[i].addEventListener('keydown', e => {
            if(e.key == "Enter") {
                console.log(e.target.parentElement);
                e.target.parentElement.submit();
            }
        })
    }
    }

    var selectProcesso = document.getElementsByClassName("processo");
    var comparaProcesso = document.getElementsByClassName('resultProcesso');
    var descricaoProcesso = document.getElementsByClassName('descricaoProcesso');
    var descricaoMaturidade = document.getElementsByClassName('descricaoMaturidade');
    var idProcesso = document.getElementsByClassName('idProcesso')


    var table = document.createElement('table');
    var thead = document.createElement('thead');
    var tbody = document.createElement('tbody');
    
    var table2 = document.createElement('table');
    var thead2 = document.createElement('thead');
    var tbody2 = document.createElement('tbody');
    

    table.appendChild(thead);
    table.appendChild(tbody);

    table2.appendChild(thead2);
    table2.appendChild(tbody2);

    document.getElementById('body').appendChild(table);
    document.getElementById('body2').appendChild(table2);
    i = 0;

    while( i < selectProcesso.length) {
        selectProcesso[i].addEventListener('change', e => {
            e.target.nextElementSibling.value = e.target.value;
            tbody.innerText = "";
            tbody2.innerText = "";
            
            for(var j = 0 ; j < comparaProcesso.length; j++)
            {
                if(comparaProcesso[j].attributes[3].nodeValue == e.target.value)
                {
                    var k = idProcesso[j].attributes[3].nodeValue
                    var row = document.createElement('tr');
                    var heading = document.createElement('td');
                    heading.innerHTML = descricaoMaturidade[j].attributes[3].nodeValue;
                    row.appendChild(heading);
                    tbody.classList.add("espaco_tabela");
                    tbody.appendChild(row);
                
                    row = document.createElement('tr');
                    heading = document.createElement('td');
                    heading2 = document.createElement('td'); 
                    heading.innerHTML = `<form action="/cadastroProcessoMaturidade/${k}/salvar_processoMaturidade" method="post" class="formulario"><input class="corpo_edita_input" name ="processo_id" type="text" value="${descricaoProcesso[j].attributes[3].nodeValue}" style="background-color:transparent; border: none;"></form>`
                    heading2.innerHTML = `<a href=/cadastroProcessoMaturidade/${k}/excluir_processoMaturidade>X<a>`;
                    heading.classList.add("celula_editar");
                    heading2.classList.add("celula_excluir");
                    row.appendChild(heading);
                    row.appendChild(heading2);
                    tbody2.appendChild(row);
                }
            }
        })
        i++;
    }



    var labelProcessoInvisivel = document.getElementById("label_processo_hidden");
    var selectProcessoInvisivel = document.getElementById("processo_id");
    var labelMaturidadeInvisivel = document.getElementById("label_maturidade_hidden");
    var selectMaturidadeInvisivel = document.getElementById("maturidade_id");

    function funcao(){
        
        labelProcessoInvisivel.classList.remove('hidden');
        selectProcessoInvisivel.classList.remove('hidden');
        labelMaturidadeInvisivel.classList.remove('hidden');
        selectMaturidadeInvisivel.classList.remove('hidden');
    
    }
</script>

</body>
</html>