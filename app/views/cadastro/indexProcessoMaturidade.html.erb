<!-- CRITÉRIOS DE ACEITAÇÃO MODAL -->
<div id="modal-container" class="modal">
        <!-- Modal content -->
    <div class="modal-content">
        <div class="modal-header">
        
            <div class="modal-header-content">
                <h1 class="modal-header-title">Crie um novo critério de aceitação para <span class="tarefa-placeholder" >Tarefa</span></h1>
                <form action="/lista_tarefas/criterio_aceitacao" method="post" class="formulario">  
                    <input type="text" name="descricao" class="inputDescricao" placeholder="Critério de Aceitação">
                    <button class="btn active">Criar novo</button>
                </form>
            </div>
                
            <span class="modal-close">&times;</span>
        </div>
        <div class="modal-table">
            <table id="criteriosTable">
                <tr>
                    <th>Critérios</th>
                    <th>Seleção</th>
                </tr>
                <% @dimensaos.each do |dimensao|%>
                    <tr>
                        <td class="criterioOption" data-id=<%= dimensao.id %>> <%= dimensao.descricao %> </td>
                        <td class="criterioSelection"> <input type="checkbox"> </td>
                    </tr>
                <% end %>
            </table>
            <% @processos.each do |processo| %>
                <span data-concluidoInfo=<%= processo.id %> data-criterioInfo=<%= processo.descricao %> class="hashInfo">Info</span>
            <% end %>
        </div>
    </div>
</div>

<script>
    var formulario = document.getElementsByClassName('formulario');
        for (var i = 0; i< formulario.length; i++){
          formulario[i].addEventListener('keydown', e => {
                if(e.key == "Enter") {
                    e.target.parentElement.parentElement.submit();
                }
            })
        }
      
    function addEventListenerToForm() {
    
    var formulario = document.getElementsByClassName('formulario');
    for (var i = 0; i< formulario.length; i++){
        formulario[i].addEventListener('keydown', e => {
            if(e.key == "Enter") {
                console.log(e.target.parentElement);
                e.target.parentElement.parentElement.submit();
            }
        })
    }
    }

    var selectprocesso = document.getElementsByClassName("processo");
    var inputprocesso = document.getElementsByClassName('inputElProcesso');
    var compararesultado = document.getElementsByClassName('resultResultado');
    var descricaoResultado = document.getElementsByClassName('descricaoResultado');
    var descricaoProcesso = document.getElementsByClassName('descricaoProcesso');
    var descricaoDimensao = document.getElementsByClassName('descricaoDimensao');
    var idResultado = document.getElementsByClassName('idResultado');
    var selectDimensao = document.getElementsByClassName('dimensao');
    

    var table = document.createElement('table');
    var thead = document.createElement('thead');
    var tbody = document.createElement('tbody');
    
    var table2 = document.createElement('table');
    var thead2 = document.createElement('thead');
    var tbody2 = document.createElement('tbody');

    var table3 = document.createElement('table');
    var thead3 = document.createElement('thead');
    var tbody3 = document.createElement('tbody');

    table.appendChild(thead);
    table.appendChild(tbody);

    table2.appendChild(thead2);
    table2.appendChild(tbody2);

    table3.appendChild(thead3);
    table3.appendChild(tbody3);

    document.getElementById('body').appendChild(table);
    document.getElementById('body2').appendChild(table2);
    document.getElementById('body3').appendChild(table3);

    i = 0;
    while( i < selectprocesso.length) {
        
        selectprocesso[i].addEventListener('change', e => {
            //e.target.nextElementSibling.value = e.target.value;
            tbody.innerText = "";
            tbody2.innerText = "";
            tbody3.innerText = "";
            
            for(var j = 0 ; j < compararesultado.length; j++)
            {
                if(compararesultado[j].attributes[3].nodeValue == e.target.value)
                {
                    
                    var k = idResultado[j].attributes[3].nodeValue
                    var row = document.createElement('tr');
                    var heading = document.createElement('td');
                    heading.innerHTML = descricaoDimensao[j].attributes[3].nodeValue;
                    row.appendChild(heading);
                    tbody.appendChild(row);

                    row = document.createElement('tr');
                    heading = document.createElement('td');
                    heading.innerHTML = descricaoProcesso[j].attributes[3].nodeValue;
                    row.appendChild(heading);
                    tbody2.appendChild(row);

                    row = document.createElement('tr');
                    heading = document.createElement('td');
                    heading2 = document.createElement('td');
                    heading.innerHTML = `<form action="/cadastroResultado/${k}/salvar_resultado" method="post" class="formulario"><input class="corpo_edita_input" name ="descricao" type="text" name="descricao" value="${descricaoResultado[j].attributes[3].nodeValue}" style="background-color:transparent; border: none;"></form>`
                    heading2.innerHTML = `<a href=/cadastroResultado/${k}/excluir_resultado>X<a>`;
                    heading.classList.add("celula_editar");
                    heading2.classList.add("celula_excluir");
                    //heading.innerHTML = descricaoResultado[j].attributes[3].nodeValue;
                    row.appendChild(heading);
                    row.appendChild(heading2);
                    tbody3.appendChild(row);
                }

            }
        })         
        i++;
    }

    i = 0;
    while( i < selectDimensao.length) {
        
        selectDimensao[i].addEventListener('change', e => {
            console.log(e.target.value);
        })         
        i++;
    }


    var modal = document.getElementById("modal-container");
    var btn = document.getElementsByClassName("open-modal");

    for (let i = 0; i < btn.length; i++) {
    // Abre o modal
    btn[i].onclick = (e) => {
        let modalClone = modal.cloneNode(true);
        let tarefaId = e.target.parentElement.parentElement.dataset.id; // tarefa id

        document.body.appendChild(modalClone);
        modalClone.style.display = "block";
        modalClone.getElementsByClassName("tarefa-placeholder")[0].innerHTML = e.target.parentElement.dataset.tarefa;

        // Fecha o modal quando o usuário aperta X.
        let span = modalClone.getElementsByClassName("modal-close")[0];
        span.onclick = () => {
        modal.style.display = "none";
        document.body.removeChild(modalClone);
        modalClone = null;
        window.location.reload();
        };

        // Fecha o modal, quando o usuário clica fora dele
        window.onclick = (e) => {
        if (e.target == modalClone) {
            modalClone.style.display = "none";
            document.body.removeChild(modalClone);
            modalClone = null;
            window.location.reload();
        }
        };

        let checkboxCriterios = modalClone.getElementsByClassName("criterioSelection");
        let hashInfo = modalClone.getElementsByClassName("hashInfo");

        // check checkboxes
        for (let i = 0; i < hashInfo.length; i++) {
        if (hashInfo[i].dataset.concluidoinfo == tarefaId) {
            for (let j = 0; j < checkboxCriterios.length; j++) {
            if (hashInfo[i].dataset.criterioinfo == checkboxCriterios[j].previousElementSibling.dataset.id)
                checkboxCriterios[j].children[0].checked = true;
            }
        }
        }

        // save changes
        for (let i = 0; i < checkboxCriterios.length; i++) {
        checkboxCriterios[i].children[0].addEventListener("change", () => {
            if (checkboxCriterios[i].children[0].checked) {
            let formClone = document.getElementById("changeConcluidoCriterio").cloneNode(true);
            formClone.action = `/lista_tarefas/concluido_criterio`;

            formClone.children[0].value = checkboxCriterios[i].previousElementSibling.dataset.id;
            formClone.children[1].value = tarefaId;

            document.body.appendChild(formClone);

            formClone.submit();
            } else {
            let formClone = document.getElementById("changeConcluidoCriterio").cloneNode(true);
            formClone.action = `/lista_tarefas/excluir_concluido_criterio`;

            formClone.children[0].value = checkboxCriterios[i].previousElementSibling.dataset.id;
            formClone.children[1].value = tarefaId;

            document.body.appendChild(formClone);

            formClone.submit();
            }
        });
        }
    };
    }
    
    
    
</script>

</body>
